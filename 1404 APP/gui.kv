BoxLayout:
    id: mainBox
    #app.loading_items()
    Popup:
        id: popup
        title: "Add Item"
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Item Name:'

            TextInput:
                id: Item_Name_Catch
                multiline: False
                write_tab: False

            Label:
                text: 'Description:'

            TextInput:
                id: Item_Description_Catch
                multiline: False
                write_tab: False

            Label:
                text: 'Price Per Day:'

            TextInput:
                id: Item_Price_Catch
                multiline: False
                write_tab: False

            Button:
                text: 'Save Item'
                on_release: app.save_item(Item_Name_Catch.text, Item_Description_Catch.text, Item_Price_Catch.text)

            Button:
                text: 'Cancel'
                on_release: app.press_cancel()

            Label:
                text: 'Enter Details For A New Item'



    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'List Items'
                    on_press: app.button_creator()

                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'Hire Items'
                    on_press: app.list_in_stock()

                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'Return Items'
                    on_press: app.list_out_stock()

                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'Confirm'
                    on_press: app.button_creator()

                Button:
                    id: addButton
                    text: 'Add New Entry'
                    on_release: app.press_add()

                Button:
                    id: BUTTON_FUNCTION_HERE
                    text: 'Save and Exit'
                    on_press: app.exit_program()

            GridLayout:
                id: entriesBox
                cols: 3
                orientation: 'vertical'



        Label:
            id: BUTTON_FUNCTION_HERE
            font_size: 20
            text: app.status_text
            color: (1, 1, 0, 1)
